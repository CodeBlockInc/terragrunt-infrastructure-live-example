pipeline {
    agent any

    stages {
        stage('Plan') {
            steps {
                dir('non-prod') {
		    withAWS(credentials: 'codeblock-aws') {
		        sh 'yes | terragrunt plan-all'
                    }
		}
            }
        }
        stage('Apply') {
            steps {
                dir('non-prod') {
		    withAWS(credentials: 'codeblock-aws') {
                        sh 'terragrunt'
                    }
		}
            }
        }
    }
}

